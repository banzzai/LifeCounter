<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    >

    <TextView
        android:id="@+id/number_of_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
    />

    <Button
        android:id="@+id/add_player_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_of_players"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@id/number_of_players"
        android:text="@string/add_player"
    />

    <Button
        android:id="@+id/validate_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_of_players"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="@string/validate_players"
    />

    <ListView
        android:id="@+id/player_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/add_player_button"
        android:layout_marginTop="10dp"
        />

