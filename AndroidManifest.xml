<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.banzz.lifecounter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="17" />
    
	<uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.banzz.lifecounter.activities.FrontMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.banzz.lifecounter.activities.TwoPlayerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <!-- android:theme="@android:style/Theme.NoTitleBar" > -->
        </activity>
        
        <activity
            android:name="com.banzz.lifecounter.activities.EditPlayerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>

        <activity
                android:name="com.banzz.lifecounter.activities.EditWizardActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="portrait"
                android:label="@string/app_name"
                android:theme="@android:style/Theme.NoTitleBar" >
        </activity>

        <activity
            android:name="com.banzz.lifecounter.activities.DeletePlayerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        
        <activity
            android:name="com.banzz.lifecounter.activities.SettingsActivity"
            android:theme="@android:style/Theme.Black">
        </activity>

        <activity
            android:name="com.banzz.lifecounter.activities.PickImageActivity"
            android:theme="@android:style/Theme.Black">
        </activity>
        
        <activity
            android:name="com.banzz.lifecounter.activities.TournamentActivity"
            android:theme="@android:style/Theme.Black"
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="com.banzz.lifecounter.activities.RoundActivity"
            android:theme="@android:style/Theme.Black"
            android:screenOrientation="portrait">
        </activity>
	</application>
</manifest>